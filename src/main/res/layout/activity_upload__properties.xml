<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#861C6D1C"
    tools:context=".Upload_Properties">

    <ImageView
        android:id="@+id/imageViewAdmin"
        android:layout_width="256dp"
        android:layout_height="169dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/txtImageName"
        app:layout_constraintEnd_toEndOf="@+id/txtImageName"
        app:layout_constraintStart_toStartOf="@+id/toolbar9"
        app:layout_constraintTop_toBottomOf="@+id/toolbar9"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="19dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/imageViewAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/priceAdmin"
        android:layout_width="319dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnSubtmitUpload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionAdmin" />

    <Button
        android:id="@+id/btnSubtmitUpload"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceAdmin" />

    <EditText
        android:id="@+id/txtBuildingName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:ems="10"
        android:hint="Building Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/descriptionAdmin"
        app:layout_constraintEnd_toEndOf="@+id/descriptionAdmin"
        app:layout_constraintStart_toStartOf="@+id/descriptionAdmin"
        app:layout_constraintTop_toBottomOf="@+id/txtImageName" />

    <EditText
        android:id="@+id/txtImageName"
        android:layout_width="310dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Picture Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtBuildingName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAdmin" />

    <EditText
        android:id="@+id/descriptionAdmin"
        android:layout_width="307dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/priceAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBuildingName" />

</androidx.constraintlayout.widget.ConstraintLayout>